    <span class="brand">FORMULA PULSE</span>
    <a href="/admin/metrics" class="<%= title === 'Metrics' ? 'active' : '' %>">Metrics</a>
    <a href="/admin/events" class="<%= title === 'Events' ? 'active' : '' %>">Events</a>
    <a href="/admin/sources" class="<%= title === 'Sources' ? 'active' : '' %>">Sources</a>
    <a href="/admin/users" class="<%= title === 'Users' ? 'active' : '' %>">Users</a>
  </nav>
